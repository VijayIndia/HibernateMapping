<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.database.common.model.key.EmployeeSalaryWithForeignKey" table="EmployeeSalaryWithForeignKey">
        <id name="salaryId" column="salary_id">
            <generator class="increment"/>
        </id>
        <property name="avgSalary" column="avg_salary" type="java.lang.Long"/>
        <property name="currSalary" column="curr_salary" type="java.lang.Integer"/>
        <property name="empId" column="emp_id" type="java.lang.Integer"/>
    </class>
</hibernate-mapping>